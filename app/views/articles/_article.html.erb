<div id="<%= dom_id article %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= article.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= article.content %>
  </p>

  <% if action_name != "show" && current_user.articles.include?(article) %>
    <%= link_to "Show this article", article, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this article", edit_article_path(article), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
  <% unless current_user.articles.include?(article) %>
    <% unless article.likes.where(user_id: current_user.id).any? %>
      <%= link_to "Like", like_path(article_id: article.id), data: { turbo_method: :put }, class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <% else %>
      <%= link_to "Deslike", deslike_path(article_id: article.id), data: { turbo_method: :delete }, class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <% end %>
    <%= article.likes.count %>
  <% end %>
</div>
